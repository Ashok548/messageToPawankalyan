{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to NestJS API",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}/apps/api",
            "remoteRoot": "${workspaceFolder}/apps/api",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/apps/api/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS API (Launch)",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "cwd": "${workspaceFolder}/apps/api",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/apps/api/dist/**/*.js"
            ]
        }
    ]
}