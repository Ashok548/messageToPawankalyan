{
    "name": "monorepo-root",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "clean": "turbo run clean && rm -rf node_modules",
        "db:generate": "pnpm --filter @questiontopk/db db:generate",
        "db:migrate": "pnpm --filter @questiontopk/db db:migrate",
        "db:reset": "pnpm --filter @questiontopk/db db:reset",
        "db:studio": "pnpm --filter @questiontopk/db db:studio",
        "db:seed": "pnpm --filter @questiontopk/db db:seed"
    },
    "devDependencies": {
        "eslint": "^8.57.1",
        "prettier": "^3.3.3",
        "shadcn": "^3.7.0",
        "turbo": "^2.7.5",
        "typescript": "^5.6.3"
    },
    "packageManager": "pnpm@8.15.0",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}